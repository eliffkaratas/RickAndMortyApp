<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_character">

    <fragment
        android:id="@+id/nav_character"
        android:name="com.example.rickandmortyapp.ui.characterlist.CharacterListFragment"
        android:label="CharacterListFragment">
        <action
            android:id="@+id/action_nav_character_list_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>
    <dialog
        android:id="@+id/characterDetailFragment"
        android:name="com.example.rickandmortyapp.ui.characterdetail.CharacterDetailFragment"
        android:label="CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail">
        <argument
            android:name="detailArgs"
            app:argType="com.example.rickandmortyapp.ui.model.CharacterArgs"
            app:nullable="false" />
    </dialog>
</navigation>